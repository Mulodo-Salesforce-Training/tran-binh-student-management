<apex:page docType="html-5.0" tabStyle="Register_Student_Scoring_Skill__tab" standardController="Student__c" extensions="SM_RegisterStudent">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">

    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
            <title>Student New</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <apex:slds />
        <apex:includeScript value="{!URLFOR($Resource.registerStudentScoringSkill)}"/>
        <apex:includeScript value="{!URLFOR($Resource.angular_min_js)}"/>
    </head>

    <body ng-app="demoApp" class="slds-container" ng-controller="myCtrl">
        <!-- REQUIRED SLDS WRAPPER -->
        <div class="slds-scope">
            <div class="slds-align_absolute-center slds-text-heading_large" style="color: #5ADBFF;">Student New</div>
            <div id="responseResult"></div>
            <div class="slds-form slds-form_stacked" title="Information">
                <apex:pageblock title="Information">          
                    <div class="slds-grid">
                       <div class="slds-col slds-size--3-of-6"><label class="slds-form-element__label">First Name </label>
                       </div>
                    </div>
                    <div class="slds-grid">
                        <div class="slds-col slds-size--3-of-4"><input type="text" class="slds-input" id="firstName" name="firstName" /></div>
                    </div>
                    <div class="slds-grid">
                       <div class="slds-col slds-size--3-of-6"><label class="slds-form-element__label">Last Name </label>
                       </div>
                    </div>
                    <div class="slds-grid">
                        <div class="slds-col slds-size--3-of-4"><input type="text" class="slds-input" id="lastName" name="lastName" /></div>
                    </div>
                    <div class="slds-grid">
                       <div class="slds-col slds-size--3-of-6"><label class="slds-form-element__label">Birthday </label>
                       </div>
                    </div>
                    <div class="slds-grid">
                        <div class="slds-col slds-size--3-of-4"><input type="date" class="slds-input" id="birthday" name="birthday" /></div>
                    </div>
                </apex:pageblock>
                
                <div class="slds-form-element">
                    <button class="slds-button slds-button_neutral" onclick="{!URLFOR($Page.SM_ListStudentPage)}">Cancel</button>
                    <button class="slds-button slds-button_neutral" onclick="getRemoteAccount();">Save</button>
                </div>
            </div>
        </div>
           <script>
                angular.module("demoApp", [])
                    .controller("myCtrl", ($scope) => {
                        $scope.students = {!JSONstudents};
                    })
            </script>
    	</body>
    </html>
</apex:page>